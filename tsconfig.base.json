// tsconfig.base.json
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022" /* Specify what module code is generated. */,
    "moduleResolution": "node" /* Specify how TypeScript looks up a file from a given module specifier. */,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react-jsx",
    "declarationMap": true,
    "declaration": true,
    "lib": ["es2016", "esnext"]
  }
}
